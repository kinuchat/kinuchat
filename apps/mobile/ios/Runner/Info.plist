<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>Kinu</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>Kinu</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>

	<!-- Bluetooth Permissions for Mesh Networking -->
	<key>NSBluetoothAlwaysUsageDescription</key>
	<string>Kinu uses Bluetooth to connect with nearby users for offline messaging via mesh network</string>
	<key>NSBluetoothPeripheralUsageDescription</key>
	<string>Kinu uses Bluetooth to connect with nearby users for offline messaging</string>

	<!-- Camera Permission for QR scanning and media messages -->
	<key>NSCameraUsageDescription</key>
	<string>Kinu needs camera access to scan QR codes and take photos for messages</string>

	<!-- Microphone Permission for voice messages -->
	<key>NSMicrophoneUsageDescription</key>
	<string>Kinu needs microphone access to record voice messages</string>

	<!-- Photo Library Permission for sending images -->
	<key>NSPhotoLibraryUsageDescription</key>
	<string>Kinu needs photo library access to send images in messages</string>

	<!-- Location Permissions for Rally Mode -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>Kinu needs your location to discover nearby Rally channels and connect you with people in your area</string>
	<key>NSLocationAlwaysUsageDescription</key>
	<string>Kinu can show you Rally channels in your area even when the app is in the background</string>
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>Kinu needs your location to discover nearby Rally channels and show relevant local conversations</string>

	<!-- Background Modes for BLE -->
	<key>UIBackgroundModes</key>
	<array>
		<string>bluetooth-central</string>
		<string>bluetooth-peripheral</string>
		<string>processing</string>
	</array>

	<!-- Background Task Identifiers (required for 'processing' mode) -->
	<key>BGTaskSchedulerPermittedIdentifiers</key>
	<array>
		<string>com.kinuchat.app.workmanager</string>
		<string>com.kinuchat.app.background</string>
	</array>

	<!-- Allow HTTP for local development -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsLocalNetworking</key>
		<true/>
	</dict>
</dict>
</plist>
